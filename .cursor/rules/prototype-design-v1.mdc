    this.loading = true;
    this.showLoadingIndicator();

    try {
      const content = await this.loadFunction(this.page);
      if (content.trim()) {
        this.container.insertAdjacentHTML("beforeend", content);
        this.page++;
      } else {
        this.hasMore = false;
      }
    } catch (error) {
      console.error("Failed to load more content:", error);
    } finally {
      this.loading = false;
      this.hideLoadingIndicator();
    }
